<!-- Cool Components -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Component</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            text-align: center;
            padding-top: 3%;
            margin: 0;
        }

        .box {
            background-color: white;
            width: 95%;
            margin: 0 auto;
            margin-top: 5%;
            opacity: 0.9;
            padding: 1%;
            margin-bottom: 4%;
            border-radius: 10px;
        }

        h1 {
            padding-bottom: 2%;
        }

        form {
            margin-top: 2%;
        }

        table {
            width: 80%;
            margin: auto;
        }

        td {
            padding: 10px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            box-sizing: border-box;
        }

        button {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        header {
            background-color: black;
            color: white;
            margin-top: -3%;
            text-align: center;
        }

        footer {
            background-color: black;
            color: white;
            padding: 15px;
            text-align: center;
            border-radius: 0 0 10px 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        #code {
            width: 100%;
            height: 200px; /* Set the desired height for the textarea */
            overflow: auto;
            background-color: rgb(135, 133, 133);
            color: green;
        }

    </style>
</head>
<body>
    <header>
        <h1>Software Component Cataloging Software</h1>
    </header>

    <div class="box container">
        <h1 style="margin-top: -5%; margin-bottom: -3%;">Add Component</h1>
        <form action="/addComponent" method="post">
            <table align="center" cellpadding="10">
                <tr>
                    <td>Title</td>
                    <td>
                        <input type="text" name="title" id="title" placeholder="Enter Component Title" maxlength="30" />
                    </td>
                </tr>
                <tr>
                    <td>Tag</td>
                    <td><input type="text" placeholder="Enter Tag" name="tag" id="tag" maxlength="100" /></td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>
                        <textarea id="description" name="description" rows="5" cols="120" placeholder="Enter Component Description">
                        </textarea>
                    </td>
                
                </tr>
                <tr>
                    <td>Code</td>
                    <td>
                        <textarea id="code" name="code" rows="10" cols="120"></textarea>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <button class="btn btn-primary">Add</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>

    <footer>
        &copy; 2023 Software Component Cataloging Software
    </footer>
</body>
</html>
