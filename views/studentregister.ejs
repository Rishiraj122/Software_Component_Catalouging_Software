    <body>
        <header>
            <h1>Software Component Cataloging Software</h1>
        </header>
        <div class="box container">
            <div class="row">
                <center><h1>REGISTRATION FORM</h1></center>
                <form action="/studentregister" method="post">
                    
                    <table align="center" cellpadding="10">

                        
                <!-------- First Name------------------------------------------------------------------------->
                        <tr>
                            <div class="col-lg-12 col-md-6 col-sm-12">
                                <td>FIRST NAME</td>
                            </div>
                            <div class="col-lg-12 col-md-6 col-sm-12">
                            <td><input type="text" name="First Name "  placeholder="Enter Your Name" maxlength="30" />
                            (max 30 characters a-z and A-Z)
                            </td>
                            </div>
                        </tr>
                    <!--------Email Id------------------------------------------------------------------------->
                        <tr style background-color="black">
                            <td>EMAIL ID</td>
                            <td><input type="text" placeholder="Enter Email" name="username" id="username" maxlength="100"   /></td>
                        </tr>

                        <tr style background-color="black">
                            <td>Password</td>
                            <td><input type="password" placeholder="Enter Password" name="password" id="password" maxlength="100"   /></td>
                        </tr>

                    <!---------------------------------Submit & Reset---------------------------------------------------------------->
                        <tr>
                            <td colspan="2" align="center">
                            <button class="btn btn-primary">Register</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <footer>
            &copy; 2023 Software Component Cataloging Software
        </footer>
    </body>
