<!-- Changes Made For Design -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Software Component Cataloging Software - Admin Dashboard</title>
    <!-- Add your CSS links and other head elements here -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: white; /* Match header and footer color */
            color: black;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
            position: relative;
        }

        .logout-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            color: white;
            background-color: #333; /* Match header color */
            border: 2px solid white;
            border-radius: 5px;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            transition: background-color 0.3s, color 0.3s;
        }

        .logout-btn:hover {
            background-color: white;
            color: black;
        }

        footer {
            background-color: #333; /* Match footer color */
            color: white;
            padding: 10px;
            text-align: center;
            bottom: 0;
            width: 100%;
        }

        h1 {
            text-align: center;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: white;
        }

        td.code {
            font-family: 'Courier New', monospace;
            white-space: pre-wrap;
            padding: 10px;
            background-color: white;
            border-top: none; /* Remove top border */
        }

        td.code-label {
            text-align: center;
            font-weight: bold;
            border-bottom: none; /* Remove bottom border */
        }

        form {
            display: inline;
        }

        .delete-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: red;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Software Component Cataloging Software</h1>
        <form action="/logout" method="post">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </header>

    <h1>Admin Dashboard</h1>

    <!-- Display all components with delete buttons -->
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Tag</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody style="padding-bottom: 5%;">
            <% components.forEach(component => { %>
                <tr>
                    <td><%= component.title %></td>
                    <td><%= component.tag %></td>
                    <td>
                        <form action="/deleteComponent/<%= component._id %>" method="post">
                            <button type="submit" class="delete-btn">&#128465;</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="code-label">Code</td>
                </tr>
                <tr>
                    <td colspan="3" class="code"><%= component.code %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Add your other HTML elements as needed -->

    <footer style="margin-top: 5%;">
        &copy; 2023 Software Component Cataloging Software
    </footer>
</body>
</html>
